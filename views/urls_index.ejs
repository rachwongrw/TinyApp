

<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<header>
    <% include ./partials/_header %>
</header>
<body>
    <h2>List of URLs and their shortened forms</h2>

    <ul>
        <% for (shortURL in urlDatabase) { %>
            <li><a href='/urls/<%= urlDatabase[shortURL].shortURL %>'><%= urlDatabase[shortURL].shortURL %></a> --> <%= urlDatabase[shortURL].longURL %>
                <form method ="POST" action="/urls/<%= urlDatabase[shortURL].shortURL %>/delete"><button type="submit">Delete</button>
                </form>
            </li>
        <% }; %>
    </ul>
    <form method ="GET" action="/urls/new"><button type="submit">Add new URL</button>
    </form>
    <a href='/urls/login'>Home</a>
</body>
</html>